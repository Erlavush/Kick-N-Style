<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1100.0" stylesheets="@../css/inventoryCSS.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ddp.kicknstyle.controller.SalesController">
   <VBox spacing="10" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
      <!-- Search and Filter Section -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <TextField fx:id="searchField" prefHeight="39.0" prefWidth="250.0" promptText="Search Sales (ID, Customer, Product)..." HBox.hgrow="ALWAYS" />
         
         <ComboBox fx:id="paymentStatusComboBox" prefWidth="150.0" promptText="Payment Status" />
         
         <ComboBox fx:id="paymentMethodComboBox" prefWidth="150.0" promptText="Payment Method" />
         
         <DatePicker fx:id="startDatePicker" prefWidth="130.0" promptText="Start Date" />
         <DatePicker fx:id="endDatePicker" prefWidth="130.0" promptText="End Date" />
         
         <TextField fx:id="minAmountField" prefWidth="100.0" promptText="Min Amount" />
         <TextField fx:id="maxAmountField" prefWidth="100.0" promptText="Max Amount" />
         
         <JFXButton fx:id="filterButton" text="Apply Filters">
            <graphic>
               <FontAwesomeIcon glyphName="FILTER" />
            </graphic>
         </JFXButton>
      </HBox>
      
      <!-- Sales Table -->
      <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="saleIdColumn" prefWidth="80" text="Sale ID" />
            <TableColumn fx:id="customerNameColumn" prefWidth="120" text="Customer Name" />
            <TableColumn fx:id="saleDateColumn" prefWidth="100" text="Sale Date" />
            <TableColumn fx:id="totalAmountColumn" prefWidth="100" text="Total Amount" />
            <TableColumn fx:id="paymentStatusColumn" prefWidth="100" text="Payment Status" />
            <TableColumn fx:id="paymentMethodColumn" prefWidth="120" text="Payment Method" />
            <TableColumn fx:id="salesDetailsColumn" prefWidth="120" text="Sales Details" />
            <TableColumn fx:id="actionColumn" prefWidth="80" text="Actions" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TableView>
      
      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="20">
         <JFXButton fx:id="addSaleButton" prefHeight="58.0" prefWidth="200.0" text="Add New Sale">
            <font>
               <Font name="Fira Code Regular" size="18.0" />
            </font>
            <graphic>
               <FontAwesomeIcon glyphName="PLUS_CIRCLE" />
            </graphic>
         </JFXButton>
         
         <JFXButton fx:id="generateReportButton" prefHeight="58.0" prefWidth="200.0" text="Generate Report">
            <font>
               <Font name="Fira Code Regular" size="18.0" />
            </font>
            <graphic>
               <FontAwesomeIcon glyphName="FILE_TEXT_ALT" />
            </graphic>
         </JFXButton>
      </HBox>
   </VBox>
</AnchorPane>
