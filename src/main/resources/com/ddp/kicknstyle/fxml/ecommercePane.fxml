                        <Label fx:id="ratingsLabel" prefHeight="38.0" prefWidth="178.0" text="Ratings (min)">
                            <font>
                                <Font size="26.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </Label>
                        <JFXSlider fx:id="ratingsSlider" blockIncrement="1.0" max="5.0" prefHeight="28.0" prefWidth="251.0" showTickLabels="true" showTickMarks="true" value="5.0" />
