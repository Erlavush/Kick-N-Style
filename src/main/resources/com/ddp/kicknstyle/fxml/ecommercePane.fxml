      <VBox alignment="CENTER" prefHeight="728.0" prefWidth="269.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="shoppingCartPane" prefHeight="339.0" prefWidth="270.0">
               <children>
                  <ScrollPane hbarPolicy="NEVER" layoutX="2.0" layoutY="39.0" prefHeight="262.0" prefWidth="264.0" style="-fx-border-color: #ffffff;">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="262.0" prefWidth="262.0" />
                    </content>
                  </ScrollPane>
                  <Text layoutX="14.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Shopping Cart" />
