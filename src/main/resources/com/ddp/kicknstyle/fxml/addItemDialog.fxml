<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ddp.kicknstyle.controller.AddItemDialogController">
    
    <ComboBox fx:id="sneakerComboBox" promptText="Select Sneaker" />
    <TextField fx:id="quantityField" promptText="Quantity" />
    <Button fx:id="addButton" text="Add Item" onAction="#handleAddItem" />
</VBox>