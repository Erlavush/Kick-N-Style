<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ddp.kicknstyle.controller.BatchDetailDialogController">
    
    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Batch Detail Items" />
    
    <TableView fx:id="detailTable" prefWidth="580">
        <columns>
            <TableColumn fx:id="sneakerCol" prefWidth="184.79993283748627" text="Sneaker" />
            <TableColumn fx:id="quantityCol" prefWidth="97.5999755859375" text="Quantity" />
            <TableColumn fx:id="costCol" prefWidth="73.60003662109375" text="Unit Cost" />
            <TableColumn fx:id="remainingCol" prefWidth="120.00003051757812" text="Remaining Qty" />
        </columns>
    </TableView>
    
    <Button fx:id="closeButton" onAction="#handleClose" text="Close" />
    
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</VBox>
