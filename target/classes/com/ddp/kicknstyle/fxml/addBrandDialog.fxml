<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ddp.kicknstyle.controller.AddBrandDialogController">
   <children>
      <Label text="Add New Brand">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="brandNameField" promptText="Enter Brand Name" />
      <JFXButton fx:id="addButton" onAction="#handleAddBrand" text="Add Brand" />
      <JFXButton fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
   </children>
</VBox>