                            <children>
                                <Label fx:id="basketballLabel" prefHeight="43.0" prefWidth="206.0" text="Basketball" />
                                <JFXCheckBox fx:id="basketballCheckBox" contentDisplay="GRAPHIC_ONLY" prefHeight="42.0" prefWidth="20.0" />
